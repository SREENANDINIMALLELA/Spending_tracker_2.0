<form align = 'center' method="post" action="/spending_tracker/category" >
  <label for="category_name">Category</label>
  <input id= "category_name" type="text" name="name" >
  <input class= 'submit' type="submit" value="create category"/>
</form>


<h4 align = 'center'>Existing categorise</h4>
<%@categories.each do |category|%>
<h5 align = 'center'><%=category.name%> </h5>

<form  align = 'center' method="post" action="/spending_tracker/category/<%= category.id%>" >
  <input class = 'delete' type="submit" value="delete category"/>
</form>

<% end %>
